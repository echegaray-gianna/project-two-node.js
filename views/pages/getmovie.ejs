<!DOCTYPE html>
<html lang="en-us">

<head>

    <title> Categories </title>

    <%- include('../partials/head'); %>

</head>

<body>

    <header>
        <%- include('../partials/header'); %>

    </header>

    <main>

        <h1 class="movie_title"> Movies</h1>

        <% movieinfo.forEach(function(movie) {  %>

        <div class="movie">
            <img src="<%= movie.movie_img %>" alt="Movie Picture" class="movie_img">
            <h3 class="movie_subtitle">
                <%= movie.movie_name %>
            </h3>
            <p class="date"><%= movie.movie_date %></p>
            <p class="duration"> duration <%= movie.movie_duration %> </p>
            <a href="<%= movie.movie_trailer %>" target="_blank"> Play trailer on YouTube</a>
            <p class="actors"> Actors: <%= movie.movie_actors %> </p>
            <p class="actors"> <%= movie.movie_description %> </p>




        </div>


        <% }); %>



    </main>


    <footer>
        <%- include('../partials/footer'); %>
    </footer>

    <script src="js/script.js"></script>

</body>

</html>