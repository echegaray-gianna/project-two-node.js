<!DOCTYPE html>
<html lang="en-us">

<head>

    <title> Streaming </title>

    <%- include('../partials/head'); %>

</head>

<body>

    <header>
        <%- include('../partials/header'); %>

    </header>

    <main>
        <div class="body_text">

            <h1 class="streaming title"> Streaming</h1>

            <div class="get_cat_str_container">

                <% streaming.forEach(function(stmg) {  %>

                <form action="/getmoviebystreaming" method="GET" class="form getmovies">

                    <div class="get_cat_str_subcontainer">
                        <h3 class="streaming_subtitle">
                            <%= stmg.streaming_name %>
                        </h3>

                        <img src="<%= stmg.streaming_img %>" alt="Streaming Company" class="stmg_img">

                    </div>

                    <input hidden name="streaming_id" value="<%=stmg.streaming_id %>">
                    <input type="submit" name="submit" class="btn get_cat_str" value="See Movies">
                </form>

                <% }); %>
            </div>

        </div>
    </main>


    <footer>
        <%- include('../partials/footer'); %>
    </footer>

    <script src="js/script.js"></script>

</body>

</html>